{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "./build/cjs",
    "typeRoots": [
      "node_modules/@types",
      "./src/types"
    ],
    "types": [
      "jest"
    ]
  },
  "ts-node": {
    "files": true
  }
}