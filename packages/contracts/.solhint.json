{
  "extends": [
    "solhint:recommended"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 4,
        "printWidth": 110
      }
    ],
    "quotes": [
      "error",
      "double"
    ],
    "compiler-version": [
      "error",
      "^0.8.0"
    ],
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "func-name-mixedcase": "off"
  },
  "plugins": [
    "prettier"
  ]
}